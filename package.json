{
  "name": "zenoter",
  "version": "2.1.0",
  "type": "module",
  "description": "A modern, animated note-taking app for developers",
  "main": "dist-electron/main/index.js",
  "author": "Ruman Kazi <your-email@example.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/create-placeholder-icon.cjs",
    "build": "tsc && vite build && pnpm electron:compile",
    "electron": "pnpm electron:compile && electron .",
    "electron:dev": "concurrently \"pnpm dev\" \"pnpm electron:compile && wait-on http://localhost:5173 && electron .\"",
    "electron:compile": "tsc -p electron/main/tsconfig.json && tsc -p electron/preload/tsconfig.json",
    "electron:build": "pnpm build && pnpm electron:compile && electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test:installer": "bash scripts/test-installer.sh",
    "verify:build": "bash scripts/verify-build.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "preview": "vite preview",
    "dist": "pnpm build && electron-builder",
    "dist:win": "pnpm build && electron-builder --win",
    "dist:mac": "pnpm build && electron-builder --mac",
    "dist:linux": "pnpm build && electron-builder --linux",
    "rebuild": "electron-builder install-app-deps",
    "docs:dev": "cd docs && pnpm dev",
    "docs:build": "cd docs && pnpm build",
    "docs:preview": "cd docs && pnpm preview",
    "release:dry": "semantic-release --dry-run",
    "release:dry:verbose": "semantic-release --dry-run --debug"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@monaco-editor/react": "^4.7.0",
    "better-sqlite3": "^12.4.1",
    "electron-store": "^11.0.2",
    "framer-motion": "^12.23.24",
    "highlight.js": "^11.11.1",
    "lottie-react": "^2.4.1",
    "monaco-editor": "^0.54.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@emotion/babel-plugin": "^11.13.5",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.1.0",
    "electron-builder-squirrel-windows": "26.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.rumankazi.zenoter",
    "productName": "Zenoter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "publish": "never",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zenoter",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "category": "Development"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "dompurify": ">=3.2.4",
      "glob@<9": ">=10.0.0",
      "rimraf@<4": ">=5.0.0",
      "inflight": "npm:@zkochan/retry@^0.2.0"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.18.3"
}
